<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.vsgatestmobileapp1.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_calculatorFragment"
            app:destination="@id/nav_calculator" />
        <action
            android:id="@+id/action_homeFragment_to_noteEditorActivity"
            app:destination="@id/noteEditorActivity" />
        <action
            android:id="@+id/action_homeFragment_to_dailyNotesFragment"
            app:destination="@id/nav_daily_notes" />
    </fragment>

    <fragment
        android:id="@+id/nav_calculator"
        android:name="com.example.vsgatestmobileapp1.ui.calculator.CalculatorFragment"
        android:label="@string/calculator"
        tools:layout="@layout/fragment_calculator">
        <action
            android:id="@+id/action_nav_calculator_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_daily_notes"
        android:name="com.example.vsgatestmobileapp1.ui.dailynotes.DailyNotesFragment"
        android:label="Daily Notes"
        tools:layout="@layout/fragment_daily_notes">
        <action
            android:id="@+id/action_dailyNotesFragment_to_noteEditorActivity"
            app:destination="@id/noteEditorActivity" />
    </fragment>

    <activity
        android:id="@+id/noteEditorActivity"
        android:name="com.example.vsgatestmobileapp1.ui.dailynotes.NoteEditorActivity"
        android:label="Note Editor" />
</navigation>
